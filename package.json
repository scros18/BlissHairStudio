{
  "name": "blisshairstudio",
  "version": "1.0.0",
  "description": "Premium hair care website - Production-ready TypeScript application",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "api": "node ./server/index.js",
    "start:api": "node ./server/index.js",
    "dev:full": "concurrently \"npm run api\" \"npm run dev\"",
    "sync:pull": "git pull origin main && echo Data synced from VPS!",
    "sync:push": "git add data/ && git commit -m \"Data sync $(date)\" && git push origin main && echo Data pushed to VPS!",
    "data:backup": "tar -czf backup-$(date +%Y%m%d-%H%M%S).tar.gz data/ && echo Backup created!",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "serve": "vite preview --host"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.2",
    "eslint": "^8.54.0",
    "postcss": "^8.4.32",
    "postcss-import": "^15.1.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.7",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-pwa": "^0.17.4",
    "workbox-window": "^7.0.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0"
  }
}
